@page "/services"

<PageTitle>Services</PageTitle>

<MudGrid>
    <MudItem xs="12" md="12" lg="12" Class="d-flex justify-center">
        <MudText Typo="Typo.h3">Services</MudText>
    </MudItem>

    @if (reservationTypes.Count() > 0)
    {
        <MudItem xs="12" md="12" lg="12" Class="d-flex justify-center flex-wrap gap-4">
            @foreach (var service in reservationTypes)
            {
                <MudItem xs="12" md="3" lg="3">
                    <MudButton Variant="Variant.Filled" Style="height:80px; width:100%;" OnClick="() => SelectServiceClickEvent(service)">@service.Name</MudButton>
                </MudItem>
            }
        </MudItem>
    }
    else
    {
        <MudItem xs="12" md="12" lg="12" Class="d-flex justify-center">
            <MudText Typo="Typo.body1">Ingen tilgængelige services.</MudText>
        </MudItem>
    }
</MudGrid>
