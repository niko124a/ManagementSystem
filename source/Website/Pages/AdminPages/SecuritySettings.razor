@page "/securitysettings"

<MudGrid>
    <MudItem xs="12" md="12" lg="12">
        <MudItem xs="12" md="3" lg="3">
            <MudText Typo="Typo.h5">Api key for website</MudText>
            <MudTextField @bind-Value="_apiKey" 
                          Disabled="true" 
                          Immediate="true" 
                          Label="Api Key" 
                          Variant="Variant.Text" 
                          InputType="@_keyInput"></MudTextField>
            <MudToggleIconButton Toggled="@_keyVisible" 
                                 Icon="@Icons.Material.Filled.VisibilityOff" 
                                 ToggledIcon="@Icons.Material.Filled.Visibility" 
                                 ToggledChanged="ShowKey"/>
            <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="async () => await UpdateApiKey()">Generate new token</MudButton>
        </MudItem>
    </MudItem>
</MudGrid>

